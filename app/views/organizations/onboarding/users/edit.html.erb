<div id="employee-info">
  <%= form_for [:onboarding, user] do |f| %>
    <div class="card-body">
      <h4 class="page-title text-center">Employee Info</h4>
      <hr class="green-ruler">
      <div class="row justify-content-md-center">
        <div class="col-4">
          <p class="card-text text-muted text-center">We need to gather a few additional details before beginning the paperwork process</p>
        </div>
      </div>
      <div class="row justify-content-md-center mt-5">
        <div class="col-6 mb-3">
          <%= render 'shared/errors', obj: user %>
          <div class="form-group">
            <div class="row">
              <div class="col">
                <%= f.label :employee_type, class: "form-label" %>
                <%= f.select :employee_type, ["Salary", "Hourly"], {}, class: "form-control custom-select" %>
              </div>
              <div class="col">
                <%= f.label :phone, class: "form-label" %>
                <%= f.telephone_field :phone, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group mb-4">
            <div class="row">
              <div class="col">
                <%= f.label :date_of_birth, class: "form-label" %>
                <%= f.text_field :date_of_birth, class: "form-control" %>
              </div>
              <div class="col">
                <%= f.label :ssn, class: "form-label" %>
                <%= f.text_field :ssn, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="form-group my-3">
            <div class="row">
              <div class="col">
                <%= f.label :drivers_license_number, class: "form-label" %>
                <%= f.text_field :drivers_license_number, class: "form-control" %>
              </div>
              <div class="col">
                <%= f.label :drivers_license_expiration, class: "form-label" %>
                <%= f.text_field :drivers_license_expiration, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row justify-content-md-center">
            <div class="col">
              <hr>
            </div>
            <div class="col-2 text-center">
              OR
            </div>
            <div class="col">
              <hr>
            </div>
          </div>

          <div class="form-group mt-2">
            <div class="row">
              <div class="col">
                <%= f.label :passport_number, class: "form-label" %>
                <%= f.text_field :passport_number, class: "form-control" %>
              </div>
              <div class="col">
                <%= f.label :passport_expiration, class: "form-label" %>
                <%= f.text_field :passport_expiration, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card-footer text-center">
      <%= link_to "Previous Step", onboarding_meet_the_management_path, class: "btn mx-3", id: "previous-btn" %>
      <%= f.submit "Next Step", class: "btn mx-3", id: "next-btn" %>
    </div>
  <% end %>
</div>
