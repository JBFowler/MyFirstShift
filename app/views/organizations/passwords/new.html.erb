<div id="forgot-password-page">
  <div class="row justify-content-center">
    <div class="col-6 my-5">
      <h4 class="text-center"><i class="fa fa-key default-blue-text mr-sm-2" aria-hidden="true"></i> Forgot your <span class="font-weight-bold">password?</h4>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render 'shared/errors', obj: resource %>

        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Enter Email" %>
        </div>

        <%= f.submit "Send me reset password instructions", class: "btn btn-primary w-100 mb-3 mt-1" %>
      <% end %>
    </div>
  </div>
</div>
