<div id="new-manager-page">
  <div class="row justify-content-md-center">
    <div class="col-6 my-5">
      <h4 class="text-center"><i class="fa fa-tasks mr-sm-2 default-blue-text" aria-hidden="true"></i> New <span class="font-weight-bold">Manager</span></h4>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-6">
      <%= render 'shared/errors', obj: manager %>
      <%= form_for [@unit, :leader, manager] do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :picture, "Picture (if available)", class: "form-label" %>
          <%= f.file_field :picture, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, rows: 4, class: "form-control" %>
        </div>

        <br/>

        <div class="row">
          <div class="col mt-2">
            <u class="text-link"><%= link_to "See existing Managers", unit_leader_preferences_path %></u>
          </div>
          <div class="col">
            <%= f.submit "Create Manager", class: "btn btn-info pull-right px-4" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
