<div id="meet-the-management">
  <% if store_front.file %>
    <%= image_tag store_front, id: "organization-building-img", class: "card-img-top btr-radius-none btl-radius-none" %>
  <% end %>
  <div class="card-body text-center">
    <% if videos.any? %>
      <div id="intro-videos-div">
        <h4 class="page-title">Welcome To <%= @unit.name %></h4>
        <hr class="green-ruler">
        <div class="row justify-content-md-center">
          <div class="col-4">
            <p class="card-text text-muted">Please watch the welcome <%= 'video'.pluralize(videos.count) %> below</p>
          </div>
        </div>
        <div class="row justify-content-md-center my-5">
          <% if videos.count > 1 %>
            <% videos.each do |video| %>
              <div class="col-6">
                <iframe src="<%= video.url %>" frameborder="0" allowfullscreen></iframe>
              </div>
            <% end %>
          <% else %>
            <div class="col">
              <iframe src="<%= videos.first.url %>" width="560" height="315" frameborder="0" allowfullscreen></iframe>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <div id="intro-managers-div" class="<%= videos.any? ? 'videos-present' : '' %>">
      <h4 class="page-title">Meet Your Managers</h4>
      <hr class="green-ruler">
      <div class="row justify-content-md-center">
        <div class="col-4">
          <p class="card-text text-muted">Below are the managers of <strong><%= @unit.name %></strong></p>
        </div>
      </div>
      <div class="row justify-content-md-center mt-5">
        <% managers.each do |manager| %>
          <div class="col-4">
            <div class="manager-card card mb-3">
              <%= image_tag manager.picture, class: "card-img-top" %>
              <div class="card-body">
                <h5 class="card-title"><%= manager.name %></h5>
                <h6 class="card-subtitle mb-2 text-muted no-underline"><%= link_to manager.email, '' %></h6>
                <p class="card-text text-muted"><%= manager.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-footer text-center">
    <% if videos.any? %>
      <button id="meet-managers-btn" class="btn btn-default next-btn">Meet Your Managers</button>
      <button id="back-to-videos-btn" class="btn btn-default previous-btn videos-present">Back to <%= 'Video'.pluralize(videos.count) %></button>
    <% end %>
    <%= link_to "Next Step", unit_onboarding_employee_info_path(@unit), class: "btn btn-default next-btn px-5 #{videos.any? ? 'videos-present' : '' }", id: "to-user-info-btn" %>
  </div>
</div>
