<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_for [:owner, @invite] do |f| %>
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><i class="fa fa-paper-plane mr-sm-2" aria-hidden="true"></i> Invite Members</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'shared/errors', obj: @invite %>
        <div class="form-group">
          <%= f.label :email, class: "col-form-label" %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :expires_at, class: "col-form-label" %>
          <%= f.date_select :expires_at, default: 30.days.from_now, class: "form-control custom-select" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Send Invite", class: "btn btn-info" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
