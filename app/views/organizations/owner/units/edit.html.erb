<div id="owner-edit-unit-page">
  <div class="row justify-content-md-center">
    <div class="col-6 my-5">
      <h4 class="text-center"><i class="fa fa-users mr-sm-2 default-blue-text" aria-hidden="true"></i> Edit <span class="font-weight-bold">Unit</span></h4>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-6 mb-3">
      <%= render 'shared/errors', obj: unit %>
      <%= form_for [:owner, unit] do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col">
              <%= f.label :city, class: "form-label" %>
              <%= f.text_field :city, class: "form-control" %>
            </div>
            <div class="col">
              <%= f.label :state, class: "form-label" %>
              <%= f.text_field :state, class: "form-control" %>
            </div>
          </div>
        </div>

        <%= f.submit "Update", class: "btn btn-primary pull-right px-4 mt-2" %>
        <%= link_to "Cancel", owner_unit_path(unit), class: "btn btn-danger pull-right px-4 mr-3 mt-2" %>
      <% end %>
    </div>
  </div>
</div>
