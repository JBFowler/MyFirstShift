<div class="row">
  <div class="col-8">
    <%= form_tag owner_units_path, method: :get, class: "form-inline" do |f| %>
      <div class="form-group mx-sm-3">
        <label class="mr-sm-2">Sort By:</label>
        <%= select_tag :sort, "<option value='name' #{ (params[:sort] == 'name') ? 'selected' : '' }>Name</option><option value='city' #{ (params[:sort] == 'city') ? 'selected' : '' }>City</option><option value='state' #{ (params[:sort] == 'state') ? 'selected' : '' }>State</option>".html_safe, class: "custom-select" %>
      </div>
      <div class="form-group">
        <%= text_field_tag :search, params[:search] || "", placeholder: "Search Units", class: "form-control search-field" %>
        <span class="input-group-btn">
          <%= button_tag(type: "submit", class: "btn btn-secondary search-btn") do %>
            <i class="fa fa-search" aria-hidden="true"></i>
          <% end %>
        </span>
        <% unless params[:search].blank? && params[:sort].blank? %>
          <small class="ml-3"><i class="fa fa-times-circle danger-text pr-1" aria-hidden="true"></i><%= link_to "Clear Search/Sort", owner_units_path, class: "danger-text" %></small>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col">
    <%= link_to new_owner_unit_path, class: "pull-right btn btn-info mr-3" do %>
      <i class="fa fa-users mr-sm-2" aria-hidden="true"></i> Create New Unit
    <% end %>
  </div>
</div>
