<div id="owner-edit-user-page">
  <div class="row justify-content-md-center">
    <div class="col-6 my-5">
      <h4 class="text-center"><i class="fa fa-user-circle mr-sm-2 default-blue-text" aria-hidden="true"></i> Edit <span class="font-weight-bold">Member</span></h4>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-6 mb-3">
      <%= render 'shared/errors', obj: user %>
      <%= form_for [:owner, user] do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
            <div class="col">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, "Email Address", class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col">
              <%= f.label :employee_type, class: "form-label" %>
              <%= f.select :employee_type, ["salary", "hourly"], {}, class: "form-control custom-select" %>
            </div>
            <div class="col">
              <%= f.label :wage, "Wage", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-addon">$</span><%= f.text_field :wage, class: "form-control" %><span class="input-group-addon">.00</span>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control" %>
            </div>
            <div class="col">
              <%= f.label :phone, class: "form-label" %>
              <%= f.telephone_field :phone, class: "form-control" %>
            </div>
          </div>
        </div>

        <%= f.submit "Update", class: "btn btn-primary pull-right px-4 mt-2" %>
        <%= link_to "Cancel", owner_member_path(user), class: "btn btn-danger pull-right px-4 mr-3 mt-2" %>
      <% end %>
    </div>
  </div>
</div>
