<div id="owner-preferences-page">
  <%= render partial: 'shared/flash_messages' %>
  <div class="row">
    <div class="col-8">
      <div class="card">
        <h5 class="card-header">
          Store Front
        </h5>
        <% if !@organization.store_front.blank? %>
          <%= image_tag @organization.store_front, class: "card-img-top btr-radius-none btl-radius-none" %>
        <% end %>
        <div class="card-body">
          <p class="card-text">Click below to upload a new photo of your organization</p>
          <%= form_for [:owner, @organization], multipart: true do |f| %>
            <%= f.file_field :store_front, class: 'mb-3' %>
            <br />
            <%= f.submit "Upload", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col">
      <div class="card">
        <h5 class="card-header">
          Managers <%= link_to "Add Manager", new_owner_manager_path, class: 'pull-right' %>
        </h5>
        <div class="card-body">
          <div class="row">
            <% managers.each do |manager| %>
              <div class="col-sm-4">
                <div class="card mb-3">
                  <%= image_tag manager.picture, class: "card-img-top" %>
                  <div class="card-body">
                    <h5 class="card-title"><%= manager.name %></h5>
                    <p class="card-text"><%= manager.description %></p>
                    <%= link_to "Remove", owner_manager_path(manager), method: :delete, class: "btn btn-danger" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
